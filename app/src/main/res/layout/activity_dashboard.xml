<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtna"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DASHBOARD"
                    android:textStyle="bold"
                    android:textAppearance="?textAppearanceHeadline5"
                    android:textColor="@color/primaryTextColor"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/primaryTextColor"
                    android:text="Welcome to Live Streaming TV"
                    android:textAppearance="?textAppearanceBody1"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    >

                    <LinearLayout
                        android:id="@+id/linear.live"
                        android:layout_width="186dp"
                        android:background="@color/primaryColor"
                        android:layout_height="200dp"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"

                            android:src="@drawable/lives" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Live"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13pt"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/linear.highlight"
                        android:layout_width="186dp"
                        android:layout_height="200dp"
                        android:background="@color/primaryColor"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/highligh" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Highlights"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13pt"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/startionative"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:id="@+id/native_Admob_ads_rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                tools:ignore="MissingConstraints">

                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/yellowborder">

                    <LinearLayout
                        android:id="@+id/linear.score"
                        android:layout_width="186dp"
                        android:layout_height="200dp"
                        android:background="@color/primaryColor"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/livescore" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Livescore"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13pt"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/linear.tv"
                        android:layout_width="186dp"
                        android:layout_height="200dp"
                        android:background="@color/primaryColor"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/tv" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Live TV"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13pt"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/startionative2"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
